---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import Pagination from '../components/Pagination.astro';

const pageTitle = 'LendCity Mortgages Blog';
const pageDescription = 'Get the best investor information. Real estate investing tips, mortgage financing strategies, and wealth building advice from LendCity Mortgages.';

// Placeholder posts - will be replaced with content collection in Phase 2
const posts = [
  {
    title: 'Save Thousands on US Property Deals with Smart FX',
    description: 'Learn how Canadian investors can save $15,000-$20,000 on US property purchases by using foreign exchange specialists.',
    href: '/save-thousands-on-us-property-deals-with-smart-fx/',
    image: '/images/blog/smart-fx.webp',
    date: new Date('2025-12-23'),
    category: 'The Wisdom, Lifestyle, Money Show',
  },
  {
    title: 'How To Invest In Real Estate When You\'re Too Busy',
    description: 'Discover strategies for busy professionals to build a real estate portfolio without sacrificing your career or personal life.',
    href: '/how-to-invest-in-real-estate-when-youre-too-busy/',
    image: '/images/blog/too-busy.webp',
    date: new Date('2025-12-23'),
    category: 'The Wisdom, Lifestyle, Money Show',
  },
  {
    title: 'Building a $12M Real Estate Portfolio from Scratch',
    description: 'A step-by-step look at how one investor built a multi-million dollar real estate portfolio starting with nothing.',
    href: '/building-a-12m-real-estate-portfolio-from-scratch/',
    image: '/images/blog/portfolio.webp',
    date: new Date('2025-12-23'),
    category: 'The Wisdom, Lifestyle, Money Show',
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="section-sm">
    <div class="container-site">
      <!-- Page Header -->
      <header class="mb-12">
        <h1 class="text-display-sm md:text-display mb-4">{pageTitle}</h1>
        <div class="flex items-center gap-4">
          <div class="relative flex-1 max-w-md">
            <input
              type="search"
              placeholder="Search articles..."
              class="input pl-10"
              id="blog-search"
            />
            <svg
              class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-dark-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
        </div>
      </header>

      <!-- Posts Grid -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <PostCard {...post} />
        ))}
      </div>

      <!-- Pagination placeholder -->
      <Pagination currentPage={1} totalPages={5} basePath="/blog" />
    </div>
  </section>
</BaseLayout>
