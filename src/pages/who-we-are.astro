---
import BaseLayout from '../layouts/BaseLayout.astro';
import CTASection from '../components/CTASection.astro';
import TeamMember from '../components/TeamMember.astro';
import FAQSection from '../components/FAQSection.astro';

const pageTitle = 'Who We Are';
const pageDescription = 'Discover LendCity\'s passion for helping clients secure financing. Learn more about our dedicated team committed to your real estate success.';

const teamMembers = [
  { name: 'Scott Dillingham', role: 'CEO – Mortgage Agent Level 2', href: '/scott-dillingham/', image: '/images/team/scott-dillingham.webp' },
  { name: 'Aya Chukr', role: 'COO', href: '/aya-chukr/', image: '/images/team/aya-chukr.webp' },
  { name: 'Nour Chukr', role: 'Lead Coordinator', href: '/nour-chukr/', image: '/images/team/nour-chukr.webp' },
  { name: 'Gillian Irving', role: 'Mortgage Agent Level 1', href: '/gillian-irving/', image: '/images/team/gillian-irving.webp' },
  { name: 'Kirann Sharma', role: 'Mortgage Agent Level 1', href: '/kirann-sharma/', image: '/images/team/kirann-sharma.webp' },
  { name: 'Chris Micucci', role: 'Loan Officer – U.S.A.', href: '/chris-micucci/', image: '/images/team/chris-micucci.webp' },
  { name: 'Christine Traynor', role: 'Mortgage Agent Level 1', href: '/christine-traynor/', image: '/images/team/christine-traynor.webp' },
  { name: 'Jennifer Champion', role: 'Mortgage Agent Level 1', href: '/jennifer-champion/', image: '/images/team/jennifer-champion.webp' },
  { name: 'Jeremy Kresky', role: 'Mortgage Agent Level 1', href: '/jeremy-kresky/', image: '/images/team/jeremy-kresky.webp' },
  { name: 'Matt Buschman', role: 'Mortgage Agent Level 1', href: '/matt-buschman/', image: '/images/team/matt-buschman.webp' },
  { name: 'David Cardozo', role: 'Mortgage Agent Level 1', href: '/david-cardozo/', image: '/images/team/david-cardozo.webp' },
  { name: 'Julien Alcarez', role: 'Mortgage Agent Level 1', image: '/images/team/julien-alcarez.webp' },
  { name: 'Jimmy Rivera', role: 'Loan Officer – U.S.A.', href: '/jimmy-rivera/', image: '/images/team/jimmy-rivera.webp' },
];

const faqs = [
  {
    question: 'Are you active in the community?',
    answer: 'Yes, LendCity sponsors many sports teams, charities and community events. We love helping financially and by donating our time.',
  },
  {
    question: 'What kind of experience do you have?',
    answer: 'Combined our team has over 30 years experience. What makes LendCity different is that each mortgage agent has to be an expert in the investing niche they are lending on.',
  },
  {
    question: 'What is the size of your team?',
    answer: 'There are more than 15 team members at LendCity, from Admin, Underwriting, Sales and CEO. We always have someone available to help you.',
  },
  {
    question: 'How is your process different?',
    answer: 'At LendCity, we create a strategic game plan for your mortgage financing. It doesn\'t matter if your purchasing a single family home, or building a $500 million dollar apartment building, we come up with a create strategy to maximize your approvals and get you the best rates and terms.',
  },
  {
    question: 'Where do you lend?',
    answer: 'LendCity has dedicated teams that lend in Canada, U.S.A, and Mexico.',
  },
];

const valueProps = [
  {
    title: 'Expert Level Knowledge',
    description: 'With our extensive experience, we provide unparalleled insights and solutions tailored to your needs.',
  },
  {
    title: 'Investor Focused',
    description: 'Being investor-focused is crucial when lending as it ensures alignment with the unique needs and goals of investors.',
  },
  {
    title: 'Award Winning',
    description: 'We\'re recognized for our exceptional skills and proven success, ensuring you receive top-tier expertise and service.',
  },
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-dark-50 to-white">
    <div class="container-site">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-display-sm md:text-display mb-6">
            <span class="text-primary-600">About</span> Us
          </h1>
          <p class="text-body-lg text-dark-600 mb-6">
            At LendCity, we don't just arrange mortgages—<strong>we're active real estate investors ourselves</strong>.
            We understand the challenges you face because we navigate them daily in our own portfolios.
            This isn't theoretical advice; it's <strong>battle-tested experience</strong> from people who've put their own capital on the line.
          </p>
          <p class="text-body-lg text-dark-600 mb-6">
            Whatever your investment strategy, we have team members who've already walked that path.
            From <strong>single-family rentals to multi-unit developments, fix-and-flips to commercial properties</strong>,
            our experts have done the deals, made the mistakes, and learned the lessons.
            You're getting guidance from investors who truly understand your goals.
          </p>
          <p class="text-body-lg text-dark-600">
            We provide <strong>financing solutions across Canada, the United States, and Mexico for both residential and commercial properties</strong>.
            Whether you're scaling locally or expanding internationally, LendCity delivers the expertise and connections to fund your next investment—wherever opportunity takes you.
          </p>
        </div>
        <div>
          <img
            src="/images/about-lendcity.webp"
            alt="About LendCity Mortgages"
            width="600"
            height="400"
            class="rounded-2xl shadow-strong"
            loading="eager"
          />
        </div>
      </div>

      <!-- Quote -->
      <blockquote class="mt-16 text-center max-w-3xl mx-auto">
        <p class="text-title-lg md:text-headline italic text-dark-700 mb-4">
          "Don't wait to buy real estate. Buy real estate and wait."
        </p>
        <cite class="text-body text-dark-500 not-italic">– Will Rogers</cite>
      </blockquote>
    </div>
  </section>

  <!-- CTA Section -->
  <CTASection />

  <!-- Why Choose Us -->
  <section class="section">
    <div class="container-site">
      <div class="text-center mb-12">
        <p class="text-caption uppercase tracking-wider text-primary-600 font-semibold mb-3">
          North America's Investment Property Lender
        </p>
        <h2 class="text-headline md:text-display-sm mb-6">Why Choose Us?</h2>
        <p class="text-body-lg text-dark-600 max-w-3xl mx-auto">
          At LendCity, <strong>we're investors first, mortgage brokers second</strong>.
          Every strategy we recommend has been tested with our own capital across Canada, the U.S., and Mexico.
          <strong>Our team includes specialists in every investment niche—residential, commercial, fix-and-flip, multi-unit</strong>—so whatever you're building, you're working with someone who's already done it successfully.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {valueProps.map((prop) => (
          <div class="card p-8 text-center">
            <h3 class="text-title font-bold mb-3">{prop.title}</h3>
            <p class="text-body text-dark-600">{prop.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="section bg-dark-50">
    <div class="container-site">
      <div class="text-center mb-12">
        <h2 class="text-headline md:text-display-sm mb-4">The Team</h2>
        <p class="text-body-lg text-dark-600">Meet the <strong>dream team</strong>.</p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {teamMembers.map((member) => (
          <TeamMember {...member} />
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <FAQSection title="FAQ" subtitle="Do you have questions?" faqs={faqs} />
</BaseLayout>
