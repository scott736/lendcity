---
interface Props {
  name: string;
  role: string;
  href?: string;
  image: string;
}

const { name, role, href, image } = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  href={href}
  class:list={[
    'card overflow-hidden text-center',
    href && 'group cursor-pointer',
  ]}
>
  <div class="aspect-square overflow-hidden bg-dark-100">
    <img
      src={image}
      alt={name}
      width="300"
      height="300"
      class:list={[
        'w-full h-full object-cover',
        href && 'group-hover:scale-105 transition-transform duration-300',
      ]}
      loading="lazy"
    />
  </div>
  <div class="p-4">
    <h3 class:list={[
      'font-bold text-dark-900',
      href && 'group-hover:text-primary-600 transition-colors',
    ]}>
      {name}
    </h3>
    <p class="text-body-sm text-dark-500">{role}</p>
  </div>
</Tag>
