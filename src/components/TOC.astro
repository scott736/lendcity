---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

{filteredHeadings.length > 0 && (
  <nav class="toc" aria-label="Table of contents">
    <ul class="space-y-2 text-body-sm">
      {filteredHeadings.map((heading) => (
        <li class={heading.depth === 3 ? 'ml-4' : ''}>
          <a
            href={`#${heading.slug}`}
            class="text-dark-600 hover:text-primary-600 transition-colors block py-1"
          >
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}
