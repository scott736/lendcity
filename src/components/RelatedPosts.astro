---
interface Props {
  currentSlug: string;
  tags: string[];
  limit?: number;
}

const props = Astro.props;
const _currentSlug = props.currentSlug;
const _tags = props.tags;
const _limit = props.limit ?? 3;

// This will be populated by the content collection in Phase 2
// For now, it's a placeholder that shows the structure
const relatedPosts: Array<{ href: string; image: string; title: string; category: string }> = [];
---

{relatedPosts.length > 0 && (
  <section class="mt-12 pt-8 border-t border-dark-200">
    <h2 class="text-title font-bold mb-6">Further Reading</h2>
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {relatedPosts.map((post) => (
        <a href={post.href} class="card-hover group">
          <div class="aspect-card overflow-hidden">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          </div>
          <div class="p-4">
            <p class="text-caption text-primary-600 mb-1">{post.category}</p>
            <h3 class="font-semibold text-dark-900 group-hover:text-primary-600 transition-colors line-clamp-2">
              {post.title}
            </h3>
          </div>
        </a>
      ))}
    </div>
  </section>
)}
