---
interface Props {
  title?: string;
  subtitle?: string;
  showButtons?: boolean;
}

const {
  title = 'Ready to take action?',
  subtitle = 'Book a <strong>Free Strategy Call</strong> and develop the <strong>best plan</strong> for your <strong>mortgage financing and investing needs.</strong>',
  showButtons = true,
} = Astro.props;
---

<section class="section bg-dark-900 text-white">
  <div class="container-site text-center">
    <h2 class="text-headline md:text-display-sm mb-4">{title}</h2>
    <p class="text-body-lg text-dark-300 max-w-2xl mx-auto mb-8" set:html={subtitle} />

    {showButtons && (
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://outlook.office365.com/book/FreeStrategyCall@lendcity.ca/"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-accent btn-lg"
        >
          Book A Call
        </a>
        <a href="/contact/" class="btn-secondary btn-lg border-white text-white hover:bg-white/10">
          Contact Us
        </a>
      </div>
    )}

    <slot />
  </div>
</section>
