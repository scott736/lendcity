---
interface Props {
  title?: string;
  subtitle?: string;
  showButtons?: boolean;
}

const {
  title = 'Ready to take action?',
  subtitle = 'Book a <strong>Free Strategy Call</strong> and develop the <strong>best plan</strong> for your <strong>mortgage financing and investing needs.</strong>',
  showButtons = true,
} = Astro.props;
---

<section class="section">
  <div class="container-site">
    <div class="cta-box flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div class="md:max-w-xl">
        <h2 class="text-headline mb-3">{title}</h2>
        <p class="text-body text-dark-700" set:html={subtitle} />
      </div>

      {showButtons && (
        <div class="flex flex-col sm:flex-row gap-3 flex-shrink-0">
          <a
            href="https://outlook.office365.com/book/FreeStrategyCall@lendcity.ca/"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary"
          >
            Book A Call
          </a>
          <a href="/contact/" class="btn-secondary">
            Contact Us
          </a>
        </div>
      )}

      <slot />
    </div>
  </div>
</section>
