---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { name: 'Privacy Policy', href: '/privacy-policy/' },
  { name: 'Contact', href: '/contact/' },
];
---

<footer class="bg-dark-900 text-white">
  <!-- Newsletter CTA Section -->
  <section class="bg-primary-600 py-12">
    <div class="container-site">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <p class="text-caption uppercase tracking-wider text-primary-200 mb-1">Exclusive Insights</p>
          <h2 class="text-title-lg md:text-headline font-bold">
            Join LendCity's <span class="text-accent-300">Weekly Investor Insight</span>
          </h2>
        </div>
        <a
          href="https://lendcity-network.myflodesk.com/investorinsight"
          target="_blank"
          rel="noopener noreferrer"
          class="btn bg-white text-primary-700 hover:bg-primary-50 font-bold px-8"
        >
          Join
        </a>
      </div>
    </div>
  </section>

  <!-- Main Footer -->
  <div class="container-site py-12">
    <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-8">
      <!-- Company Info -->
      <div class="text-center md:text-left">
        <a href="/" class="inline-block mb-4">
          <img
            src="/images/lendcity-logo-white.webp"
            alt="LendCity Mortgages"
            width="160"
            height="64"
            class="h-10 w-auto"
            loading="lazy"
          />
        </a>
        <p class="text-body-lg font-semibold text-white mb-1">LendCity Mortgages</p>
        <p class="text-body text-dark-300 mb-4">North America's Investment Property Lender</p>
        <p class="text-body-sm text-dark-400 max-w-md">
          Powered by Dominion Lending Centres, Expert Financial. License # 12129.
          Each Office Independently Owned & Operated.
        </p>
        <address class="text-body-sm text-dark-400 mt-4 not-italic">
          4769 Wyandotte St E, Windsor, Ontario, N8W 5M8
        </address>
      </div>

      <!-- Footer Links -->
      <nav class="flex gap-6" aria-label="Footer navigation">
        {footerLinks.map((link) => (
          <a
            href={link.href}
            class="text-dark-300 hover:text-white transition-colors"
          >
            {link.name}
          </a>
        ))}
      </nav>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-dark-700 text-center">
      <p class="text-body-sm text-dark-400">
        &copy;{currentYear} LendCity Mortgages. All rights reserved.
      </p>
    </div>
  </div>
</footer>
