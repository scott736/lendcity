---
const currentYear = new Date().getFullYear();

const footerLinks = [
  { name: 'Privacy Policy', href: '/privacy-policy/' },
  { name: 'Contact', href: '/contact/' },
];

const socialLinks = [
  { name: 'YouTube', href: 'https://www.youtube.com/@lendcitymortgages', icon: 'youtube' },
  { name: 'LinkedIn', href: 'https://www.linkedin.com/company/lendcity-mortgages', icon: 'linkedin' },
  { name: 'Instagram', href: 'https://www.instagram.com/lendcitymortgages/', icon: 'instagram' },
  { name: 'Facebook', href: 'https://www.facebook.com/lendcityprivateinvestorsgroup', icon: 'facebook' },
];
---

<footer class="bg-dark-900 text-white">
  <!-- Newsletter Section -->
  <section class="bg-dark-50">
    <div class="container-site">
      <div class="grid md:grid-cols-2 gap-0">
        <div class="py-16 pr-8">
          <p class="label mb-3">Exclusive Insights</p>
          <h2 class="text-headline text-dark-900 mb-6">
            Join LendCity's <strong>Weekly Investor Insight</strong>
          </h2>
          <a
            href="https://lendcity-network.myflodesk.com/investorinsight"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-outline inline-flex items-center gap-2"
          >
            <span>â†’</span> Join
          </a>
        </div>
        <div class="hidden md:block">
          <img
            src="/images/newsletter-bg.webp"
            alt="Newsletter"
            class="w-full h-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Main Footer -->
  <div class="container-site py-16">
    <div class="flex flex-col md:flex-row md:justify-between gap-12">
      <!-- Company Info -->
      <div class="md:max-w-md">
        <h3 class="text-title-lg text-white mb-2">LendCity Mortgages</h3>
        <p class="text-body text-dark-400 mb-6">North America's Investment Property Lender</p>
        <p class="text-body-sm text-dark-400 mb-4">
          Powered by Dominion Lending Centres, Expert Financial.<br />
          License # 12129. Each Office Independently Owned & Operated.
        </p>
        <address class="text-body-sm text-dark-400 not-italic">
          4769 Wyandotte St E, Windsor, Ontario, N8W 5M8
        </address>
      </div>

      <!-- Social Links -->
      <div class="flex items-start gap-6">
        {socialLinks.map((social) => (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-dark-400 hover:text-white transition-colors"
            aria-label={social.name}
          >
            {social.icon === 'youtube' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            )}
            {social.icon === 'linkedin' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            )}
            {social.icon === 'instagram' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/>
              </svg>
            )}
            {social.icon === 'facebook' && (
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-dark-800 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <nav class="flex gap-8" aria-label="Footer navigation">
        {footerLinks.map((link) => (
          <a
            href={link.href}
            class="text-caption uppercase tracking-widest text-dark-400 hover:text-white transition-colors"
          >
            {link.name}
          </a>
        ))}
      </nav>
      <p class="text-body-sm text-dark-500">
        &copy; {currentYear}
      </p>
    </div>
  </div>
</footer>
