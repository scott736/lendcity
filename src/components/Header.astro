---
interface NavChild {
  name: string;
  description: string;
  href: string;
  icon?: string;
  external?: boolean;
}

interface NavPodcast {
  name: string;
  href: string;
  image: string;
}

interface NavItem {
  name: string;
  href: string;
  children?: NavChild[];
  podcasts?: NavPodcast[];
}

const navigation: { main: NavItem[]; cta: { text: string; href: string } } = {
  main: [
    { name: 'Who We Are', href: '/who-we-are/' },
    {
      name: 'Expertise',
      href: '#',
      children: [
        { name: 'Developments', description: 'New developments and construction.', href: '/development-mortgage-financing/', icon: 'developments' },
        { name: 'Flipping', description: 'Access flip financing for your project.', href: '/flip-mortgage-financing/', icon: 'flipping' },
        { name: 'Multi-Family', description: '5+ unit rental properties.', href: '/multi-family-mortgage-financing/', icon: 'multifamily' },
        { name: 'Office Buildings', description: 'Low to mid rise office buildings.', href: '/office-mortgage-financing/', icon: 'office' },
        { name: 'Padsplit', description: 'Co-living investment properties.', href: '/padsplit-mortgage-financing/', icon: 'padsplit' },
        { name: 'Residential', description: 'One to four unit properties.', href: '/residential-mortgage-financing/', icon: 'residential' },
        { name: 'Retail Plaza', description: 'Retail plaza & strip malls.', href: '/retail-mortgage-financing/', icon: 'retail' },
      ],
    },
    {
      name: 'Investor Resources',
      href: '/investor-resources/',
      children: [
        { name: 'Strategy Call', description: 'Create the best game plan for your financing.', href: 'https://outlook.office365.com/book/FreeStrategyCall@lendcity.ca/', external: true },
        { name: 'Weekly Investor Insight', description: 'Access our best information we share only with this group', href: 'https://lendcity-network.myflodesk.com/', external: true },
        { name: 'Private Facebook Group', description: 'Connect with like-minded investors', href: 'https://www.facebook.com/lendcityprivateinvestorsgroup', external: true },
        { name: 'Investor Blog', description: 'Check out our amazing articles.', href: '/tags/' },
      ],
      podcasts: [
        { name: 'Wisdom, Lifestyle Money Show', href: 'https://podcast.lendcity.ca/', image: '/images/wisdom-lifestyle-money-show.webp' },
        { name: 'Close More Deals Podcast', href: 'https://closemoredealspodcast.lendcity.ca/', image: '/images/close-more-deals.webp' },
      ],
    },
    { name: 'Blog', href: '/blog/' },
    { name: 'Contact', href: '/contact/' },
  ],
  cta: {
    text: 'Apply Online',
    href: 'https://velocity-client.newton.ca/en/client/journey/home?shortCode=dvobzvtxzpxc',
  },
};
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-dark-100" id="site-header">
  <div class="container-site">
    <nav class="flex items-center justify-between h-20" aria-label="Main navigation">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0" aria-label="LendCity Mortgages - Home">
        <img
          src="/images/lendcity-logo.webp"
          alt="LendCity Mortgages"
          width="180"
          height="72"
          class="h-12 w-auto"
          loading="eager"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navigation.main.map((item) => (
          item.children ? (
            <div class="relative group">
              <button
                class="flex items-center gap-1 px-4 py-2 text-dark-700 font-medium hover:text-primary-600 transition-colors"
                aria-expanded="false"
                aria-haspopup="true"
              >
                {item.name}
                <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <!-- Dropdown Menu -->
              <div class="absolute left-0 top-full pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <div class="bg-white rounded-2xl shadow-strong p-6 min-w-[320px]">
                  <p class="text-body-sm font-semibold text-dark-400 uppercase tracking-wider mb-4">
                    {item.name === 'Expertise' ? 'Our Expertise:' : 'Investor Resources'}
                  </p>
                  <ul class="space-y-1">
                    {item.children.map((child) => (
                      <li>
                        <a
                          href={child.href}
                          class="flex items-start gap-3 p-3 rounded-lg hover:bg-dark-50 transition-colors group/item"
                          target={child.external ? '_blank' : undefined}
                          rel={child.external ? 'noopener noreferrer' : undefined}
                        >
                          <div class="flex-1">
                            <p class="font-semibold text-dark-900 group-hover/item:text-primary-600 transition-colors">
                              {child.name}
                              {child.external && (
                                <svg class="inline w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                </svg>
                              )}
                            </p>
                            <p class="text-body-sm text-dark-500 mt-0.5">{child.description}</p>
                          </div>
                        </a>
                      </li>
                    ))}
                  </ul>

                  {item.podcasts && (
                    <div class="mt-6 pt-6 border-t border-dark-100 grid grid-cols-2 gap-4">
                      {item.podcasts.map((podcast) => (
                        <a
                          href={podcast.href}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="group/podcast"
                        >
                          <div class="aspect-video rounded-lg overflow-hidden bg-dark-100 mb-2">
                            <img
                              src={podcast.image}
                              alt={podcast.name}
                              class="w-full h-full object-cover group-hover/podcast:scale-105 transition-transform duration-300"
                              loading="lazy"
                            />
                          </div>
                          <p class="text-body-sm font-semibold text-dark-900 group-hover/podcast:text-primary-600 transition-colors">
                            {podcast.name}
                          </p>
                          <p class="text-caption text-primary-600">Listen Now</p>
                        </a>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class="px-4 py-2 text-dark-700 font-medium hover:text-primary-600 transition-colors"
            >
              {item.name}
            </a>
          )
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a
          href={navigation.cta.href}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary"
        >
          {navigation.cta.text}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden p-2 text-dark-700 hover:text-primary-600"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6 menu-open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg class="w-6 h-6 menu-close hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div class="lg:hidden hidden" id="mobile-menu">
    <div class="container-site py-6 border-t border-dark-100">
      <nav class="space-y-2">
        {navigation.main.map((item) => (
          item.children ? (
            <div class="mobile-dropdown">
              <button
                class="flex items-center justify-between w-full px-4 py-3 text-dark-700 font-medium hover:bg-dark-50 rounded-lg"
                aria-expanded="false"
              >
                {item.name}
                <svg class="w-4 h-4 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div class="mobile-dropdown-content hidden pl-4 mt-2 space-y-1">
                {item.children.map((child) => (
                  <a
                    href={child.href}
                    class="block px-4 py-2 text-dark-600 hover:text-primary-600 rounded-lg"
                    target={child.external ? '_blank' : undefined}
                    rel={child.external ? 'noopener noreferrer' : undefined}
                  >
                    {child.name}
                  </a>
                ))}
              </div>
            </div>
          ) : (
            <a
              href={item.href}
              class="block px-4 py-3 text-dark-700 font-medium hover:bg-dark-50 rounded-lg"
            >
              {item.name}
            </a>
          )
        ))}
      </nav>

      <div class="mt-6 pt-6 border-t border-dark-100">
        <a
          href={navigation.cta.href}
          target="_blank"
          rel="noopener noreferrer"
          class="btn-primary w-full justify-center"
        >
          {navigation.cta.text}
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuOpen = menuButton?.querySelector('.menu-open');
  const menuClose = menuButton?.querySelector('.menu-close');

  menuButton?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuOpen?.classList.toggle('hidden');
    menuClose?.classList.toggle('hidden');
    menuButton.setAttribute('aria-expanded', String(!isOpen));
  });

  // Mobile dropdown toggles
  document.querySelectorAll('.mobile-dropdown button').forEach((button) => {
    button.addEventListener('click', () => {
      const content = button.nextElementSibling;
      const isOpen = content?.classList.toggle('hidden');
      const icon = button.querySelector('svg');
      icon?.classList.toggle('rotate-180', !isOpen);
      button.setAttribute('aria-expanded', String(!isOpen));
    });
  });

  // Header scroll behavior
  const header = document.getElementById('site-header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      header?.classList.add('shadow-soft');
    } else {
      header?.classList.remove('shadow-soft');
    }
  });
</script>
